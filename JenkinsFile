pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/lakshmibharanidharan/Jenkins-Pipeline.git'
        WAR_NAME = 'hello-world.war'
        REMOTE_USER = 'ubuntu'
        REMOTE_HOST = '20.0.139.179' // private EC2 IP
        REMOTE_PATH = '/opt/tomcat/webapps'
        SSH_CREDENTIALS_ID = 'deploy' // Jenkins credential ID
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: "${REPO_URL}"
            }
        }

        stage('Build WAR File') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent (credentials: ["${SSH_CREDENTIALS_ID}"]) {
                    sh """
                        scp -o StrictHostKeyChecking=no target/${WAR_NAME} ${REMOTE_USER}@${REMOTE_HOST}:${REMOTE_PATH}
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
