pipeline {
    agent any

    tools {
        maven 'MAVEN3.9.0' // This must match the name in Global Tool Configuration
    }

    environment {
        GIT_REPO = 'https://github.com/lakshmibharanidharan/Jenkins-Pipeline.git'
        GIT_BRANCH = 'main'
        SSH_CREDENTIALS = 'deploy'   // Jenkins SSH key credentials ID
        REMOTE_USER = 'ubuntu'
        REMOTE_HOST = '20.0.139.179'
        REMOTE_PATH = '/opt/tomcat/webapps'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git credentialsId: "${SSH_CREDENTIALS}", url: "${GIT_REPO}", branch: "${GIT_BRANCH}"
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent([SSH_CREDENTIALS]) {
                    sh """
                        scp -o StrictHostKeyChecking=no target/hello-world.war ubuntu@20.0.139.179:/tmp/
                        ssh -o StrictHostKeyChecking=no -i ~/.ssh/tomcat_key ubuntu@20.0.139.179 'sudo mv /tmp/hello-world.war /opt/tomcat/webapps/'
                    """
                }
            }
        }

        stage('Restart Tomcat') {
            steps {
                sshagent([SSH_CREDENTIALS]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${REMOTE_HOST} 'sudo systemctl restart tomcat'
                    """
                }
            }
        }
    }
}
